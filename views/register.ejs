<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkUp - Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Animation for the message */
        .message {
            animation: slideIn 0.5s forwards;
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            background-color: #d1fae5; /* Light green background */
            color: #065f46; /* Dark green text */
            border: 1px solid #4ade80; /* Green border */
            padding: 10px 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            opacity: 1;
            transition: opacity 0.5s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-50%) translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        /* Custom styling for the file upload */
        .custom-file-upload {
            display: flex;
            align-items: center;
        }

        .custom-file-upload input[type="file"] {
            display: none;
        }

        .custom-file-upload button {
            background-color: #4b5563; /* Gray background */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

        .custom-file-upload button:hover {
            background-color: #1e40af; /* Blue background on hover */
        }

        .file-name {
            color: #4b5563; /* Dark gray */
            font-style: italic;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <!-- Registration Form Container -->
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <!-- Logo and Slogan -->
        <div class="text-center mb-6">
            <h1 class="text-3xl font-bold text-blue-700">LinkUp</h1>
            <p class="text-gray-500">Connect. Chat. LinkUp.</p>
        </div>

        <!-- Registration Form -->
        <form action="/register" method="POST" enctype="multipart/form-data">
            <!-- Name Field -->
            <div class="mb-4">
                <label for="name" class="block text-gray-600">Name</label>
                <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required placeholder="Enter your name">
            </div>

            <!-- Email Field -->
            <div class="mb-4">
                <label for="email" class="block text-gray-600">Email</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required placeholder="Enter your email">
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label for="password" class="block text-gray-600">Password</label>
                <input type="password" id="password" name="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400" required placeholder="Create a password">
            </div>

            <!-- Custom Profile Image Upload -->
            <div class="mb-6">
                <label class="block text-gray-600">Upload Profile Image</label>
                <div class="custom-file-upload">
                    <button type="button" id="uploadButton">Choose File</button>
                    <span class="file-name" id="fileName">No file chosen</span>
                    <input type="file" id="fileUpload" name="image" accept="image/*">
                </div>
            </div>

            <!-- Register Button -->
            <div class="mb-4">
                <button type="submit" class="w-full bg-gray-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md" value="Register">
                    Register
                </button>
            </div>

            <!-- Forgot Password & Already Have Account -->
            <div class="text-center">
                <p class="text-gray-600 mt-2">Already have an account? 
                    <a href="/login" class="text-gray-600 hover:underline">Login here</a>.
                </p>
            </div>
        </form>

        <% if (typeof message != 'undefined') { %>
            <div class="message" id="message"><%= message %></div>
        <% } %>
    </div>

    <script>
        // Function to update the file name label
        const fileUpload = document.getElementById('fileUpload');
        const fileName = document.getElementById('fileName');
        const uploadButton = document.getElementById('uploadButton');

        uploadButton.addEventListener('click', () => {
            fileUpload.click();
        });

        fileUpload.addEventListener('change', (event) => {
            const selectedFile = event.target.files[0];
            if (selectedFile) {
                fileName.textContent = selectedFile.name;
            } else {
                fileName.textContent = 'No file chosen';
            }
        });

        // Function to remove the message after a few seconds
        const messageElement = document.getElementById('message');
        if (messageElement) {
            setTimeout(() => {
                messageElement.style.opacity = '0';
                setTimeout(() => {
                    messageElement.remove();
                }, 500);
            }, 3000);
        }
    </script>
</body>
</html>
