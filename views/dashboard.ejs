<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkUp - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.2/socket.io.js" integrity="sha512-VJ6+sp2E5rFQk05caiXXzQd1wBABpjEj1r5kMiLmGAAgwPItw1YpqsCCBtq8Yr1x6C49/mTpRdXtq8O2RcZhlQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding: 1rem;
            border-right: 1px solid #e5e5e5;
        }

        .user-list-item {
            padding: 10px;
            border-bottom: 1px solid #e5e5e5;
            cursor: pointer;
        }

        .user-list-item:hover {
            background-color: #f0f0f0;
        }

        .chat-container {
            overflow-y: auto;
            max-height: calc(100vh - 160px);
        }

        .chat-section {
            display: none;
        }
        .online-status{
            color: green;
        }
        .offline-status{
            color: red;
        }
    </style>
</head>

<body class="flex">
    <!-- Sidebar -->
    <div class="sidebar w-64 flex-shrink-0">
        <div class="sidebar-content mb-6">
            <h2 class="text-xl font-bold">LinkUp</h2>
        </div>
        <nav>
            <ul>
                <li class="mb-4">
                    <a href="/dashboard" class="text-gray-700 hover:text-blue-500">Dashboard</a>
                </li>
                <li>
                    <a href="/logout" class="text-gray-700 hover:text-blue-500">Logout</a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-6">
        <h1 class="text-2xl font-bold mb-4">Welcome to chat app, <%= user.name %>!</h1>
        <div class="grid grid-cols-12 gap-6">
            <!-- User List Section -->
            <div class="col-span-3 bg-gray-100 p-4 rounded-lg shadow">
                <ul id="userList">
                    <% if (users.length > 0) { %>
                        <% for (let i = 0; i < users.length; i++) { %>
                            <li class="user-list-item rounded flex items-center"  data-id= "<%= users[i]['_id']%>" onclick="showChatSection()">
                                <img src="<%= users[i]['image'] %>"  class="w-12 h-12 rounded-full mr-4">
                                <%= users[i]['name'] %>

                                <%
                                   if(users[i]['is_online'] == 1){
                                    %>
                                     <sup class="online-status" id="<%= users[i]['_id']%>-status">Online</sup>
                                    <%
                                   }
                                   else{
                                    %>
                                    <sup class="offline-status" id="<%= users[i]['_id']%>-status">Offline</sup>
                                   <%
                                   }
                                %>
                            </li>
                        <% } %>
                    <% } else { %>
                        <li class="text-gray-600">No Contacts.</li>
                    <% } %>
                </ul>
            </div>

            <!-- Chat Section -->
            <div class="col-span-9 flex flex-col bg-white rounded-lg shadow h-[calc(100vh-96px)]">
                <h3 class="start-section p-4">Click to start the chat</h3>

                <div class="chat-section flex flex-col flex-1 p-4">
                    <!-- Chat messages container -->
                    <div class="chat-container flex-1 overflow-y-auto p-4 bg-gray-100 rounded-lg">
                        <!-- Chat messages will be dynamically inserted here -->
                    </div>

                    <!-- Message input form -->
                    <form action="" id="chat-form" class="mt-4 flex-shrink-0 flex items-center space-x-4 bg-gray-50 p-4 rounded-lg">
                        <input type="text" name="message" id="message" placeholder="Enter Message" class="flex-1 border rounded-lg p-2 focus:outline-none" required>
                        <button type="submit" class="btn btn-primary bg-blue-500 text-white px-4 py-2 rounded-lg">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const sender_id = '<%= user._id%>';
        const socket = io('/user-namespace',{
            auth:{
                token:'<%= user._id%>'
            }
        });
        // JavaScript to show the chat section when a user is clicked
        function showChatSection() {
            var userId = $(this).attr('data-id');
            receiver_id = userId;
            document.querySelector('.start-section').style.display = 'none'; // Hide the start section
            document.querySelector('.chat-section').style.display = 'flex'; // Show the chat section
        }
     //update user online status
    socket.on('getOnlineStatus',function(data){
        $('#'+data.user_id+'-status').text('Online');
        $('#'+data.user_id+'-status').removeClass('offline-status');
        $('#'+data.user_id+'-status').addClass('online-status');

    });

    //update user oline status
    socket.on('getOfflineStatus',function(data){
        $('#'+data.user_id+'-status').text('Offline');
        $('#'+data.user_id+'-status').removeClass('online-status');
        $('#'+data.user_id+'-status').addClass('offline-status');

    });
    </script>
</body>

</html>
