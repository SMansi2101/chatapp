<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - LinkUp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .fade-out {
            opacity: 1;
            transition: opacity 1s ease-in-out;
        }
        .fade-out-hidden {
            opacity: 0;
        }
        #messageBox {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            width: 80%;
            max-width: 600px;
        }
    </style>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <!-- Success or Error Message Box -->
    <% if (typeof message !== 'undefined') { %>
    <div id="messageBox" class="<%= message.includes('Please check your inbox') ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700' %> px-4 py-3 rounded">
        <p><%= message %></p>
    </div>
    <% } %>

    <!-- Forgot Password Form -->
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <!-- Logo and Title -->
        <div class="text-center mb-6">
            <h1 class="text-3xl font-bold text-blue-700">LinkUp</h1>
            <p class="text-gray-500">Connect. Chat. LinkUp.</p>
        </div>

        <form action="/forgot-password" method="POST">
            <!-- Email Input -->
            <div class="mb-4">
                <label for="email" class="block text-gray-600">Enter your registered email</label>
                <input type="email" id="email" name="email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
                    required placeholder="Enter your email address">
            </div>

            <!-- Submit Button -->
            <div class="mb-4">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md">
                    Send Reset Link
                </button>
            </div>

            <!-- Back to Login Link -->
            <div class="text-center">
                <p class="text-gray-600">Remember your password? 
                    <a href="/login" class="text-blue-600 hover:underline">Login here</a>.
                </p>
            </div>
        </form>
    </div>

    <!-- Script to fade out the message after 3 seconds -->
    <script>
        window.onload = function () {
            var messageBox = document.getElementById('messageBox');
            if (messageBox) {
                setTimeout(function () {
                    messageBox.style.opacity = '0'; // Manually set opacity to 0
                }, 3000); // Start fading after 3 seconds
                
                setTimeout(function () {
                    messageBox.style.display = 'none'; // Hide the message after the fade-out animation
                }, 4000); // Complete hide after the fade-out transition ends
            }
        };
    </script>
</body>
</html>
