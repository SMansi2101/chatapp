<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkUp - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <!-- Registration Form Container -->
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <!-- Logo and Slogan -->
        <div class="text-center mb-6">
            <h1 class="text-3xl font-bold text-blue-700">LinkUp</h1>
            <p class="text-gray-500">Connect. Chat. LinkUp.</p>
        </div>

        <!-- Registration Form -->
        <form action="/login" method="POST">

            <!-- Email Field -->
            <div class="mb-4">
                <label for="email" class="block text-gray-600">Email</label>
                <input type="email" id="email" name="email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400"
                    required placeholder="Enter your email">
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label for="password" class="block text-gray-600">Password</label>
                <input type="password" id="password" name="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400"
                    required placeholder="Create a password">
            </div>

            <!-- Register Button -->
            <div class="mb-4">
                <button type="submit"
                    class="w-full bg-gray-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md"
                    value="Login">
                    Login
                </button>
            </div>

            <!-- Forgot Password & Already Have Account -->
            <div class="text-center">
                <a href="#" class="text-sm text-gray-500 hover:underline">Forgot Password?</a>
                <p class="text-gray-600 mt-2">Don't have an account?
                    <a href="/register" class="text-gray-600 hover:underline">Register here</a>.
                </p>
            </div>
        </form>
        <% if(typeof message !='undefined' ){ %>
            <p style="color: red;">
                <%= message %>
            </p>
            <% } %>

    </div>  

</body>

</html>